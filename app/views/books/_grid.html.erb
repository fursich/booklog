
<li class='grid'>
  <% if book.present? %>
    <%= link_to book_path(book.id) do %>
      <div class='image'>
        <% if book.image? %>
          <%= image_tag book.image.url %>
        <% else %>
          <div class='empty'>NO IMAGE</div>
        <% end %>
      </div>
    <% end %>

    <div class='title'>
      <%= book.title %>
    </div>
    <div class='info'>
      <div class='bookmark'>
        <%= render 'books/info', book: book %>
      </div>
      <div class='category'>
        <%= render 'books/category_first', book: book %>
      </div>
    </div>
    <div class='grid_footer'>
      <%= render 'books/social_buttons', url: book_url(book.id) %>
    </div>
  <% end %>
</li>  

